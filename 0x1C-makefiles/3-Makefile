# Created new rules with: clean, oclean, fclean and re.
# Created new variable with RM
CC= gcc
SRC= main.c holberton.c
OBJ= $(SRC:.c=.o)
NAME= holberton
RM= rm -f

all: $(SRC) $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)
fclean:
	$(RM) *~ $(NAME)
	$(RM) $(OBJ)
re:
	$(RM) $(OBJ)
	$(CC)    -c -o main.o main.c
	$(CC)    -c -o holberton.o holberton.c
	$(CC) $(OBJ) -o $(NAME)
